<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/layer_shadow_corner_post"
    android:elevation="20dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="8dp"
    android:id="@+id/linearLayoutAziendaFeed">

    <include
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="11dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/header_view" >
    </include>

    <TextView
        android:id="@+id/textViewTitoloPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TitoloCommentoSchedaFont" />

    <ImageView
        android:id="@+id/imageViewPost"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="26dp"
        android:background="@drawable/placeholder"
        android:scaleType="centerCrop"
        android:foreground="@drawable/foreground_image_layer"/>

    <TextView
        android:id="@+id/textViewTestoPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginVertical="16dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:fontFamily="@font/inter_ui_regular"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>

</LinearLayout>