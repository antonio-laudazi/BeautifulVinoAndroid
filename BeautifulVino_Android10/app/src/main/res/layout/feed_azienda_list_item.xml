<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/layer_shadow_corner"
    android:elevation="20dp"
    android:layout_margin="15dp"
    android:id="@+id/linearLayoutAziendaFeed">

    <include
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="11dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/header_view" >
    </include>

    <TextView
        android:id="@+id/textViewInfoAzienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="16dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="@style/TitoloCommentoSchedaFont" />

    <ImageView
        android:id="@+id/imageViewBigAzienda"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="26dp"
        android:scaleType="centerCrop"
        android:outlineProvider="background"
        android:foreground="@drawable/foreground_image_layer"/>
</LinearLayout>
