<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="263dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/layer_shadow_corner"
    android:elevation="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewPubblicita"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layer_corner_small"
        android:outlineProvider="background"
        android:scaleType="centerCrop"
        android:foreground="@drawable/foreground_image_layer"/>

    <TextView
        android:id="@+id/textViewLabelPubblicita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/layer_yellow_corner_text_view"
        android:maxLines="1"
        android:paddingHorizontal="5dp"
        android:text="outlet"
        android:textAppearance="@style/PrezzoFont" />

    <TextView
        android:id="@+id/textViewTitoloPubblicita"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textViewLabelPubblicita"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="18dp"
        android:ellipsize="end"
        android:fontFamily="@font/larsseit_bold"
        android:maxLines="4"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

</RelativeLayout>