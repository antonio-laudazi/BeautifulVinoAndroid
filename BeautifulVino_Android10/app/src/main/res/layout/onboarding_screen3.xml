<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/titleBoarding1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Gioca"
        android:textAppearance="@style/BoardingTitoloFont" />

    <TextView
        android:id="@+id/descrBoarding1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/text_view_boarding3"
        android:textAlignment="center"
        android:lineSpacingMultiplier="1.3"
        android:textAppearance="@style/TextLongFont" />

    <RelativeLayout
        android:id="@+id/relativeLayoutImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_gioca_b1"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/boarding_gioca_b1" />

        <ImageView
            android:id="@+id/image_gioca_b2"
            android:layout_marginTop="120dp"
            android:layout_width="95dp"
            android:layout_height="96dp"
            android:scaleType="centerInside"
            android:src="@drawable/boarding_gioca_b2"/>

        <ImageView
            android:id="@+id/image_gioca_b3"
            android:layout_width="76dp"
            android:layout_height="77dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="180dp"
            android:scaleType="centerInside"
            android:src="@drawable/boarding_gioca_b3" />


        <ImageView
            android:id="@+id/image_gioca_iphone"
            android:layout_width="258dp"
            android:layout_height="475dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/boarding_gioca_iphone1"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/image_gioca_medaglia"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/medaglia" />

    </RelativeLayout>


</LinearLayout>