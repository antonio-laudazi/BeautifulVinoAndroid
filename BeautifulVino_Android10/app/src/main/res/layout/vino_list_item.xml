<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutVinoListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/layer_lista_vini_last"
    android:elevation="15dp"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="27dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/grey_circle">

            <ImageView
                android:id="@+id/imageViewVino"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:outlineProvider="background"
                android:background="@drawable/grey_circle" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNomeVino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_ui_bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorGreyishBrown"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewPercentVino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_ui_regular"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorWarmGrey60"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewInBreveVino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="27dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="@style/TextFont"
        android:layout_marginBottom="10dp"/>

    <FrameLayout
        android:id="@+id/framelayoutMostra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/colorWarmGrey20"></View>

        <Button
            android:id="@+id/buttonMostraVini"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_ui_medium"
            android:text="@string/button_mostra_vini"
            android:textColor="@color/colorPurpleBrown"
            android:textSize="11sp" />
    </FrameLayout>
</LinearLayout>
